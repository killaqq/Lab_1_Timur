@model Employee

@{
    ViewData["Title"] = "Деталі співробітника";
}

<h1>Деталі співробітника</h1>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Код:</dt>
        <dd class="col-sm-10">@Model.EmployeeCode</dd>

        <dt class="col-sm-2">Вік:</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Стать:</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Адреса:</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Телефон:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Паспортні дані:</dt>
        <dd class="col-sm-10">@Model.PassportData</dd>

        <dt class="col-sm-2">Код посади:</dt>
        <dd class="col-sm-10">@Model.PositionCode</dd>
    </dl>
</div>
<div>
    <a asp-controller="Employee" asp-action="Index">Повернутися до списку</a>
</div>